<h2>Categories (<%= @categories.length %>)</h2>

<ol>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category_products_path(category) do %>
        <span style="text-transform: capitalize;"> <%= category.title %> </span>
        (<%= category.products.count %> products)
      <% end %>
    </li>
  <% end %>
</ol>